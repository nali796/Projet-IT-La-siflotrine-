// assigner les broches des moteurs
int motorA = 2;
int motorB = 3;

// assigner la broche de la roue libre
int freeWheel = 6;

void setup() {
  // initialisation des broches de sortie
  pinMode(motorA, OUTPUT);
  pinMode(motorB, OUTPUT);
  pinMode(freeWheel, OUTPUT);

  // mettre la roue libre à l'arrêt
  digitalWrite(freeWheel, LOW);
}

void loop() {
  // avancer
  digitalWrite(motorA, HIGH);
  digitalWrite(motorB, HIGH);
  delay(2000);

  // tourner à gauche
  digitalWrite(motorA, LOW);
  digitalWrite(motorB, HIGH);
  delay(1000);

  // Stop
  digitalWrite(motorA, LOW);
  digitalWrite(motorB, LOW);
  delay(2000);

  // tourner à droite
  digitalWrite(motorA, HIGH);
  digitalWrite(motorB, LOW);
  delay(1000);
}
